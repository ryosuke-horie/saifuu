{
  "name": "saifuu-api",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:node": "node server-node.js",
    "dev:e2e": "vite --port 3003",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy:manual": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "check": "npm run typecheck && biome check src/ && npm run test:unit",
    "check:fix": "npm run typecheck && biome check --write src/ && npm run test:unit",
    "db:studio": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1 -name '*.sqlite' -type f | head -n 1) drizzle-kit studio",
    "db:studio:dev": "LOCAL_DB_PATH=./dev.db drizzle-kit studio",
    "db:migrate:dev": "node scripts/migrate-dev.js",
    "db:migrate:local": "wrangler d1 migrations apply saifuu-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply saifuu-db --remote",
    "db:generate": "drizzle-kit generate",
    "db:seed": "wrangler d1 execute saifuu-db --local --file=./drizzle/seed.sql",
    "db:setup:dev": "npm run db:migrate:dev && echo '開発環境データベースの準備完了'"
  },
  "dependencies": {
    "hono": "^4.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/workers-types": "^4.20250628.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.7",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.17.0"
  }
}
