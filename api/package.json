{
	"name": "saifuu-api",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint src/",
		"format": "biome format --write src/",
		"test": "vitest",
		"test:unit": "vitest run",
		"test:unit:infrastructure": "vitest run src/__tests__/vitest-infrastructure.test.ts src/__tests__/basic-integration.test.ts src/__tests__/utils.test.ts",
		"test:unit:infrastructure:only": "vitest run src/__tests__/vitest-infrastructure.test.ts src/__tests__/utils.test.ts",
		"test:unit:database": "vitest run src/__tests__/database-optimized.test.ts",
		"test:unit:health": "vitest run src/__tests__/health.test.ts",
		"test:unit:api": "vitest run src/__tests__/categories.test.ts",
		"test:unit:workers": "vitest run src/__tests__/workers-runtime.test.ts",
		"test:watch": "vitest watch",
		"check": "npm run typecheck && biome check src/ && npm run test:unit:infrastructure",
		"check:fix": "npm run typecheck && biome check --write src/ && npm run test:unit:infrastructure:only",
		"ci:check": "npm run typecheck && biome check src/ && npm run test:unit:infrastructure:only",
		"test:unit:optimized": "npm run test:unit:infrastructure:only && npm run test:unit:health && npm run test:unit:database",
		"test:unit:full": "npm run test:unit:optimized && npm run test:unit:api && npm run test:unit:workers",
		"test:unit:fast": "vitest run --reporter=dot src/__tests__/vitest-infrastructure.test.ts src/__tests__/utils.test.ts src/__tests__/health.test.ts",
		"test:performance": "vitest run --reporter=verbose src/__tests__/database-optimized.test.ts"
	},
	"dependencies": {
		"hono": "^4.8.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@cloudflare/vite-plugin": "^1.2.3",
		"@cloudflare/vitest-pool-workers": "^0.8.47",
		"@cloudflare/workers-types": "^4.20250628.0",
		"@types/node": "^24.0.7",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-ssr-components": "^0.3.0",
		"vitest": "^3.2.4",
		"wrangler": "^4.17.0"
	}
}
