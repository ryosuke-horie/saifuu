# ==========================================
# 環境変数設定ファイル
# ==========================================
# このファイルは環境変数のテンプレートです。
# 実際の環境に応じて以下のファイルを使用してください：
# - 開発環境: .env.development
# - 本番環境: .env.production
# - テスト環境: .env.test

# ==========================================
# API Configuration
# フロントエンドのAPI設定
# ==========================================

# API Base URL
# 開発環境: ローカルのHonoサーバー
# 本番環境: Cloudflare WorkersのURL
# 
# 重要: 本番環境用の設定は .env.production ファイルを作成して設定してください
# 例: NEXT_PUBLIC_API_URL=https://saifuu-api.ryosuke-horie37.workers.dev/api
# 
# 注意: wrangler.jsonc の vars で設定してもビルド時には反映されません
NEXT_PUBLIC_API_URL=http://localhost:5173/api

# API Settings
# APIタイムアウト（ミリ秒）
NEXT_PUBLIC_API_TIMEOUT=30000

# 最大リトライ回数
NEXT_PUBLIC_API_MAX_RETRIES=3

# リトライ間隔（ミリ秒）
NEXT_PUBLIC_API_RETRY_DELAY=1000

# 開発環境でのAPIポート（API URLが未設定の場合のフォールバック）
NEXT_PUBLIC_API_PORT=5173

# テスト環境用API URL
NEXT_PUBLIC_TEST_API_URL=http://localhost:3001/api

# ==========================================
# Logger Configuration
# ロギング設定
# ==========================================

# ログレベル (debug | info | warn | error)
# デフォルト: 開発環境 = debug, 本番環境 = info
NEXT_PUBLIC_LOG_LEVEL=debug

# ログバッファサイズ（メモリに保持するログの最大数）
# デフォルト: 100
NEXT_PUBLIC_LOG_BUFFER_SIZE=100

# ログフラッシュ間隔（ミリ秒）
# バッファされたログを送信する間隔
# デフォルト: 10000 (10秒)
NEXT_PUBLIC_LOG_FLUSH_INTERVAL=10000

# ログ送信先APIエンドポイント
# リモートログ収集サービスのエンドポイント
# デフォルト: /api/logs
NEXT_PUBLIC_LOG_API_ENDPOINT=/api/logs

# ログAPI送信タイムアウト（ミリ秒）
# デフォルト: 5000 (5秒)
NEXT_PUBLIC_LOG_API_TIMEOUT=5000

# コンソール出力の有効/無効 (true | false)
# デフォルト: 開発環境 = true, 本番環境 = false
NEXT_PUBLIC_LOG_ENABLE_CONSOLE=true

# ログトラッキングの有効/無効 (true | false)
# ユーザー行動追跡などの詳細ログ
# デフォルト: false
NEXT_PUBLIC_LOG_ENABLE_TRACKING=false

# ==========================================
# Application Configuration
# アプリケーション設定
# ==========================================

# アプリケーションバージョン
# ログやエラーレポートで使用
# デフォルト: 0.0.0
NEXT_PUBLIC_VERSION=0.0.0

# ==========================================
# Build/Test Configuration
# ビルド・テスト設定
# ==========================================

# ビジュアルリグレッションテストの有効/無効
# Vitestでのスナップショットテスト実行時に使用
# デフォルト: false
ENABLE_VISUAL_TESTS=false

# Node環境 (development | production | test)
# Next.jsが自動的に設定するため、通常は設定不要
# NODE_ENV=development