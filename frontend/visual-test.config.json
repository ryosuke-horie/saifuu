{
	"version": "1.0.0",
	"description": "Saifuu プロジェクトのビジュアルテスト設定",
	"metadata": {
		"created": "2025-01-07",
		"lastUpdated": "2025-01-07",
		"maintainer": "ryosuke-horie"
	},
	"directories": {
		"baselines": "__vis__",
		"backup": "__vis_backup__",
		"artifacts": "test-results",
		"reports": "visual-test-reports"
	},
	"thresholds": {
		"default": {
			"threshold": 0.1,
			"diffThreshold": 0.15,
			"pixelThreshold": 0.01
		},
		"strict": {
			"threshold": 0.05,
			"diffThreshold": 0.1,
			"pixelThreshold": 0.005
		},
		"relaxed": {
			"threshold": 0.2,
			"diffThreshold": 0.25,
			"pixelThreshold": 0.02
		},
		"animation": {
			"threshold": 0.25,
			"diffThreshold": 0.3,
			"pixelThreshold": 0.03
		}
	},
	"viewports": {
		"mobile": {
			"name": "Mobile",
			"width": 375,
			"height": 667,
			"deviceScaleFactor": 2,
			"isMobile": true,
			"hasTouch": true
		},
		"tablet": {
			"name": "Tablet",
			"width": 768,
			"height": 1024,
			"deviceScaleFactor": 1.5,
			"isMobile": true,
			"hasTouch": true
		},
		"desktop": {
			"name": "Desktop",
			"width": 1280,
			"height": 800,
			"deviceScaleFactor": 1,
			"isMobile": false,
			"hasTouch": false
		},
		"largeDesktop": {
			"name": "Large Desktop",
			"width": 1920,
			"height": 1080,
			"deviceScaleFactor": 1,
			"isMobile": false,
			"hasTouch": false
		}
	},
	"delays": {
		"default": 200,
		"animation": 500,
		"transition": 300,
		"loading": 1000,
		"interaction": 100
	},
	"componentCategories": {
		"ui": {
			"name": "UI Components",
			"description": "基本的なUIコンポーネント",
			"thresholds": "strict",
			"viewports": ["mobile", "desktop"],
			"delay": 200
		},
		"forms": {
			"name": "Form Components",
			"description": "フォーム関連コンポーネント",
			"thresholds": "default",
			"viewports": ["mobile", "tablet", "desktop"],
			"delay": 300
		},
		"navigation": {
			"name": "Navigation Components",
			"description": "ナビゲーション関連コンポーネント",
			"thresholds": "default",
			"viewports": ["mobile", "desktop"],
			"delay": 200
		},
		"modals": {
			"name": "Modal Components",
			"description": "モーダル・ダイアログコンポーネント",
			"thresholds": "animation",
			"viewports": ["mobile", "tablet", "desktop"],
			"delay": 500
		},
		"layout": {
			"name": "Layout Components",
			"description": "レイアウト関連コンポーネント",
			"thresholds": "default",
			"viewports": ["mobile", "tablet", "desktop"],
			"delay": 200
		},
		"data": {
			"name": "Data Components",
			"description": "データ表示コンポーネント",
			"thresholds": "default",
			"viewports": ["mobile", "desktop"],
			"delay": 300
		}
	},
	"testPatterns": {
		"basic": {
			"name": "Basic Test",
			"description": "基本的な状態のテスト",
			"viewports": ["desktop"],
			"delay": 200,
			"thresholds": "default"
		},
		"responsive": {
			"name": "Responsive Test",
			"description": "レスポンシブデザインのテスト",
			"viewports": ["mobile", "tablet", "desktop"],
			"delay": 200,
			"thresholds": "default"
		},
		"interaction": {
			"name": "Interaction Test",
			"description": "インタラクション後のテスト",
			"viewports": ["mobile", "desktop"],
			"delay": 500,
			"thresholds": "default",
			"captureAfterInteraction": true
		},
		"animation": {
			"name": "Animation Test",
			"description": "アニメーション・トランジションのテスト",
			"viewports": ["desktop"],
			"delay": 600,
			"thresholds": "animation"
		},
		"state": {
			"name": "State Test",
			"description": "各種状態のテスト",
			"viewports": ["mobile", "desktop"],
			"delay": 300,
			"thresholds": "default"
		}
	},
	"excludePatterns": [
		"**/*.test.{ts,tsx}",
		"**/*.spec.{ts,tsx}",
		"**/node_modules/**",
		"**/dist/**",
		"**/.next/**",
		"**/storybook-static/**"
	],
	"ci": {
		"enabled": true,
		"failureThreshold": 5,
		"updateBaselines": false,
		"uploadArtifacts": true,
		"retryCount": 3,
		"environments": {
			"github-actions": {
				"runner": "self-hosted",
				"browser": "chromium",
				"headless": true,
				"concurrency": 2
			}
		}
	},
	"storage": {
		"git": {
			"trackBaselines": true,
			"lfsEnabled": false,
			"ignorePatterns": ["**/*-diff.png", "**/*-actual.png"]
		},
		"backup": {
			"enabled": true,
			"retentionDays": 30,
			"maxBackups": 10,
			"compression": false
		}
	},
	"notifications": {
		"enabled": true,
		"channels": {
			"pullRequest": {
				"enabled": true,
				"template": "github-pr-comment"
			},
			"slack": {
				"enabled": false,
				"webhook": null
			}
		}
	},
	"reporting": {
		"formats": ["html", "json"],
		"includeScreenshots": true,
		"includeDiffs": true,
		"generateSummary": true,
		"outputDir": "visual-test-reports"
	},
	"performance": {
		"parallelJobs": 4,
		"timeout": 30000,
		"retryDelay": 1000,
		"maxMemory": "4gb"
	},
	"debug": {
		"enabled": false,
		"verbose": false,
		"keepArtifacts": false,
		"logLevel": "info"
	}
}
