{
  "workspaces": {
    ".": {
      "entry": ["package.json"],
      "ignore": ["api/**", "frontend/**"]
    },
    "frontend": {
      "entry": [
        "src/app/page.tsx",
        "src/app/layout.tsx",
        "src/app/global-error.tsx",
        "src/app/not-found.tsx",
        "src/app/subscriptions/page.tsx",
        "next.config.ts",
        "open-next.config.ts",
        "playwright.config.ts",
        "vitest.config.ts",
        ".storybook/main.ts",
        ".storybook/preview.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": [
        "storybook-static/**",
        "coverage/**",
        "test-results/**",
        "playwright-report/**",
        "open-next.config.ts"
      ]
    },
    "api": {
      "entry": [
        "src/index.tsx",
        "vitest.config.ts",
        "vitest.integration.config.ts",
        "vite.config.ts",
        "drizzle.config.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": [
        "dist/**",
        "node_modules/**",
        "**/*.log"
      ]
    }
  }
}