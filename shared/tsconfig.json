{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": false,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/__tests__/**/*", "src/**/*.test.*"]
}
